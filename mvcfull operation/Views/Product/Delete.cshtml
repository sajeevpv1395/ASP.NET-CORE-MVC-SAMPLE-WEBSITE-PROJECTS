
@model Product
@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="ProductName"></label>
			<input asp-for="ProductName" disabled class="form-control" />
		
		</div>
		<div class="mb-3">
			<label asp-for="ProductQuanitity"></label>
			<input asp-for="ProductQuanitity"disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="ProductPrice"></label>
			<input asp-for="ProductPrice" disabled class="form-control" />
	
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
		<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}